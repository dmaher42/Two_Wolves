<script>
  const KEY = 'two_wolves_review_ch6_12_v1';
  function fields(){return Array.from(document.querySelectorAll('input[type="text"], textarea, select'));}
  function save(){const data={}; fields().forEach(el=>data[el.id]=el.value); localStorage.setItem(KEY, JSON.stringify(data)); updateProgress();}
  function load(){const raw=localStorage.getItem(KEY); if(!raw) return; try{const data=JSON.parse(raw); fields().forEach(el=>{if(data[el.id]!==undefined) el.value=data[el.id];});}catch(e){} updateProgress();}
  function clearAll(){ if(confirm('Clear all saved answers on this device?')){ localStorage.removeItem(KEY); fields().forEach(el=>el.value=''); document.querySelectorAll('.q').forEach(q=>q.classList.remove('correct','incorrect')); document.getElementById('cResult').textContent=''; updateProgress(); } }
  function exportJSON(){ const data={}; fields().forEach(el=>data[el.id]=el.value); const blob=new Blob([JSON.stringify({exported:new Date().toISOString(), data}, null, 2)], {type:'application/json'}); const a=document.createElement('a'); a.href=URL.createObjectURL(blob); a.download='two_wolves_ch6-12_answers.json'; a.click(); }
  document.addEventListener('input', e=>{ if(['INPUT','TEXTAREA','SELECT'].includes(e.target.tagName)) save(); });
  function updateProgress(){ const f=fields(); const filled=f.filter(el=>String(el.value).trim().length>0).length; const pct=Math.round((filled/f.length)*100); const bar=document.getElementById('progressBar'); if(bar) bar.style.width=pct+'%'; }
  function scrollToId(id){ document.getElementById(id).scrollIntoView({behavior:'smooth'}); }

  // Mark helpers
  function mark(el, ok){ const parent=el.closest('.q'); parent.classList.remove('correct','incorrect'); parent.classList.add(ok?'correct':'incorrect'); }

  // Auto-check quiz
  function gradeQuizC(){
    const q1=document.getElementById('c1'); // b Ray
    const q2=document.getElementById('c2'); // b Rabbit
    const q3=document.getElementById('c3'); // b False
    let s=0;
    if(q1.value==='b'){s++; mark(q1,true)} else mark(q1,false);
    if(q2.value==='b'){s++; mark(q2,true)} else mark(q2,false);
    if(q3.value==='b'){s++; mark(q3,true)} else mark(q3,false);
    document.getElementById('cResult').textContent = `Score: ${s}/3`;
    save();
  }

  function showModelF(){ document.getElementById('fModel').style.display='block'; }

  window.addEventListener('DOMContentLoaded', load);
</script>
</body>
